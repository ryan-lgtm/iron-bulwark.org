{{#if @custom.show_newsletter_signup}}
<div class="newsletter-signup gh-outer">
    <div class="gh-inner">
        <div class="newsletter-content">
            <h3 class="newsletter-title">Stay Informed</h3>
            <p class="newsletter-description">
                Get the latest Iron County news, government updates, and community announcements delivered to your inbox.
            </p>
            <form class="newsletter-form" data-members-form="signup">
                <div class="form-row">
                    <input
                        class="newsletter-email"
                        data-members-email
                        type="email"
                        placeholder="Enter your email address"
                        required
                    />
                    <button class="newsletter-submit" type="submit">
                        Subscribe
                    </button>
                </div>
                <div class="form-success" data-members-success style="display: none;">
                    <p>Thanks for subscribing! Check your email for a confirmation link.</p>
                </div>
                <div class="form-error" data-members-error style="display: none;">
                    <p>There was an error subscribing. Please try again.</p>
                </div>
            </form>
            <p class="newsletter-privacy">
                We respect your privacy. Unsubscribe at any time.
            </p>
        </div>
    </div>
</div>

<style>
.newsletter-signup {
    background: #f8f9fa;
    border-top: 1px solid #e9ecef;
    padding: 2rem 0;
    margin: 2rem 0;
}

.newsletter-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
}

.newsletter-title {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
    color: #333;
}

.newsletter-description {
    font-size: 1rem;
    margin-bottom: 1.5rem;
    color: #666;
    line-height: 1.5;
}

.newsletter-form {
    margin-bottom: 1rem;
}

.form-row {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 1rem;
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
}

.newsletter-email {
    flex: 1;
    padding: 0.75rem 1rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 0.9rem;
    background: white;
    color: #333;
}

.newsletter-email:focus {
    outline: none;
    border-color: #ff9519;
    box-shadow: 0 0 0 2px rgba(255, 149, 25, 0.2);
}

.newsletter-submit {
    padding: 0.75rem 1.5rem;
    background: #ff9519;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.2s ease;
}

.newsletter-submit:hover {
    background: #e6850f;
}

.newsletter-privacy {
    font-size: 0.8rem;
    color: #888;
    margin: 0;
}

@media (max-width: 768px) {
    .form-row {
        flex-direction: column;
        max-width: 300px;
    }
    
    .newsletter-submit {
        width: 100%;
    }
}
</style>
{{/if}}

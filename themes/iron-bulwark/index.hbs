{{!< default}}

<div class="gh-outer">
<main class="site-main gh-inner">

    {{#if @custom.show_featured_posts}}
        {{> "featured-posts"}}
    {{/if}}

    {{#get "tags" filter="slug:news-updates" limit="1"}}
        {{#foreach tags}}
        <section class="topic news-updates-section">
            <header class="topic-header">
                <h2 class="topic-name">
                    <a href="{{url}}">ðŸ“° News & Updates</a>
                </h2>
                <p class="topic-description">Latest government decisions, tax information, and community announcements</p>
            </header>
            {{#get "posts" order="published_at desc" filter="tag:{{slug}}" limit="5" as |featured|}}
                <ul class="topic-article-feed">
                    {{#foreach featured}}
                    <li class="topic-article">
                        <h3 class="topic-article-title">
                            <a class="topic-article-link" href="{{url}}">
                                {{> "icons/chevron-right"}} {{title}}
                            </a>
                        </h3>
                        <p class="topic-article-excerpt">{{excerpt words="20"}}</p>
                    </li>
                    {{/foreach}}
                </ul>
            {{/get}}
            <a class="topic-more" href="{{url}}">View All News & Updates â†’</a>
        </section>
        {{/foreach}}
    {{/get}}

    {{#get "tags" filter="slug:opinions" limit="1"}}
        {{#foreach tags}}
        <section class="topic opinions-section">
            <header class="topic-header">
                <h2 class="topic-name">
                    <a href="{{url}}">ðŸ’­ Opinions</a>
                </h2>
                <p class="topic-description">Local perspectives, editorials, and community voices</p>
            </header>
            {{#get "posts" order="published_at desc" filter="tag:{{slug}}" limit="5" as |featured|}}
                <ul class="topic-article-feed">
                    {{#foreach featured}}
                    <li class="topic-article">
                        <h3 class="topic-article-title">
                            <a class="topic-article-link" href="{{url}}">
                                {{> "icons/chevron-right"}} {{title}}
                            </a>
                        </h3>
                        <p class="topic-article-excerpt">{{excerpt words="20"}}</p>
                    </li>
                    {{/foreach}}
                </ul>
            {{/get}}
            <a class="topic-more" href="{{url}}">View All Opinions â†’</a>
        </section>
        {{/foreach}}
    {{/get}}

    {{> "facebook-feed"}}

</main>
</div>